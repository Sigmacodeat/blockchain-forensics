# ========================================
# BLOCKCHAIN FORENSICS PLATFORM - CONFIG
# ========================================

# Environment
ENVIRONMENT=development
DEBUG=true
TEST_MODE=0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/blockchain_forensics
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Blockchain RPCs
ETH_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
BTC_RPC_URL=https://bitcoin-mainnet.blastapi.io/your-api-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
GNOSIS_RPC_URL=https://rpc.gnosischain.com
CELO_RPC_URL=https://forno.celo.org
ZKSYNC_RPC_URL=https://mainnet.era.zksync.io
SCROLL_RPC_URL=https://rpc.scroll.io
LINEA_RPC_URL=https://rpc.linea.build
TRON_API_URL=https://api.trongrid.io

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SCHEMA_REGISTRY_URL=http://localhost:8081

# TimescaleDB
TIMESCALE_URL=postgresql://user:password@localhost:5432/metrics

# NOWPayments Crypto Payments
NOWPAYMENTS_API_KEY=your-nowpayments-api-key
NOWPAYMENTS_SANDBOX=true
NOWPAYMENTS_WEBHOOK_SECRET=your-webhook-secret

# Email (SMTP)
EMAIL_ENABLED=true
EMAIL_BACKEND=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Alternative: SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# File Storage
UPLOAD_PATH=./uploads
EVIDENCE_VAULT_PATH=./data/evidence_vault.jsonl

# Security
SECRET_KEY=your-django-style-secret-key
FERNET_KEY=your-fernet-encryption-key

# External APIs
ETHERSCAN_API_KEY=your-etherscan-api-key
BLOCKCYPHER_API_KEY=your-blockcypher-api-key
CHAINALYSIS_API_KEY=your-chainalysis-api-key

# Sanctions & Intel
OFAC_API_KEY=your-ofac-api-key
EU_SANCTIONS_URL=https://data.europa.eu/api/hub/search-api/datasets/eu_sanctions
UN_SANCTIONS_URL=https://scsanctions.un.org/resources/xml/en/consolidated.xml
# Multi-Sanctions Source Overrides (optional)
OFAC_URL=https://sanctionslistservice.ofac.treas.gov/api/publicationpreview/exports/sdn.csv
UN_URL=https://scsanctions.un.org/resources/xml/en/consolidated.xml
UK_URL=https://sanctionslistservice.ofsi.hmtreasury.gov.uk/api/search/download?format=csv
EU_URL=https://data.europa.eu/data/datasets/sanctionsmap
CANADA_URL=https://www.international.gc.ca/world-monde/assets/office_docs/international_relations-relations_internationales/sanctions/sema-lmes.csv
AUSTRALIA_URL=https://www.dfat.gov.au/sites/default/files/regulation8_consolidated.csv

# Background Workers (toggle)
ENABLE_SANCTIONS_WORKER=0
ENABLE_INTEL_FEEDS_WORKER=0
INTEL_FEEDS_UPDATE_INTERVAL_MINUTES=180

# Travel Rule
TRISA_ENDPOINT=https://api.trisa.io
OPEN_VASP_ENDPOINT=https://api.openvasp.org

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000
LOKI_URL=http://localhost:3100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Cache
CACHE_TTL_SECONDS=300
REDIS_CACHE_DB=1

# ML Models
ML_MODEL_PATH=./ml/models
TORNADO_CASH_MODEL_PATH=./ml/models/tornado_detector.pkl

# Admin
ADMIN_EMAIL=admin@blockchain-forensics.com
ADMIN_PASSWORD=change-this-in-production

# Plans & Billing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,de,fr,es,it,pt,ru,zh,ja,ko

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Health Checks
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Compliance
COMPLIANCE_MODE=strict
REGULATORY_REPORTING_ENABLED=true
AUTO_SAR_GENERATION=true

# AI Agents
AGENT_MAX_TOKENS=4096
AGENT_TEMPERATURE=0.7
AGENT_MODEL=gpt-4

# Webhooks
WEBHOOK_TIMEOUT_SECONDS=30
WEBHOOK_MAX_RETRIES=3

# Queue
QUEUE_WORKERS=4
QUEUE_MAX_JOBS=1000

# DLQ (Dead Letter Queue)
DLQ_ENABLED=true
DLQ_MAX_RETRIES=5
DLQ_BACKOFF_SECONDS=60

# Schema Registry
SCHEMA_COMPATIBILITY_LEVEL=BACKWARD
SCHEMA_AUTO_REGISTER=true

# Metrics
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=90

# CDN
CDN_ENABLED=false
CDN_URL=https://cdn.yourdomain.com

# Social Login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Push Notifications
PUSH_ENABLED=false
FCM_SERVER_KEY=your-fcm-server-key

# Analytics
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# Label Feeds Aggregator (optional remote sources)
# JSON map: {"rekt":"https://...","slowmist":["https://...","https://..."]}
LABEL_FEEDS_URLS_JSON={}
# Optional HTTP headers JSON: {"Authorization":"Bearer ..."}
LABEL_FEEDS_HEADERS_JSON={}

# Error Tracking
SENTRY_DSN=your-sentry-dsn
ROLLBAR_ACCESS_TOKEN=your-rollbar-token

# Legal
TERMS_URL=https://yourdomain.com/terms
PRIVACY_URL=https://yourdomain.com/privacy
GDPR_ENABLED=true

# Feature Flags
BETA_FEATURES_ENABLED=false
EXPERIMENTAL_ML_ENABLED=false

# Cost Optimization
COST_OPTIMIZATION_ENABLED=true
AUTO_SCALING_ENABLED=false

# Enterprise Features
ENTERPRISE_PLAN_ENABLED=true
BANK_INTEGRATION_ENABLED=true
CUSTOM_REPORTING_ENABLED=true
