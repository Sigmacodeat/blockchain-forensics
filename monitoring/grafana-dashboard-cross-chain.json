{
  "dashboard": {
    "id": null,
    "title": "Blockchain Forensics - Cross-Chain Analytics",
    "tags": ["blockchain", "forensics", "cross-chain"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Bridge Events Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(bridge_events_total{stage=\"detected\"}[5m])",
            "legendFormat": "{{stage}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Risk Score Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "risk_score_value_bucket",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 1
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Kafka Consumer Lag by Topic",
        "type": "stat",
        "targets": [
          {
            "expr": "kafka_consumer_lag",
            "legendFormat": "{{topic}} - {{partition}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Kafka Events Consumed",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(kafka_events_consumed_total[5m])",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Kafka Consumer Status",
        "type": "stat",
        "targets": [
          {
            "expr": "kafka_consumer_status",
            "legendFormat": "{{group_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Sanctions Entries by Source",
        "type": "piechart",
        "targets": [
          {
            "expr": "sanctions_entries_total",
            "legendFormat": "{{source}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 14
        }
      },
      {
        "id": 7,
        "title": "Alert Engine Queue Size",
        "type": "stat",
        "targets": [
          {
            "expr": "alert_engine_queue_size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
              ]
            }
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 14
        }
      },
      {
        "id": 8,
        "title": "Alerts Created by Severity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(alerts_created_total[5m])",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      }
      ,
      {
        "id": 9,
        "title": "Audit Events by Type/Severity",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (event_type, severity) (increase(audit_events_total[5m]))",
            "legendFormat": "{{event_type}}/{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 36,
    "version": 1,
    "links": []
  },
  "overwrite": true
}
