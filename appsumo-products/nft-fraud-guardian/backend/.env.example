# Environment Configuration
NODE_ENV=production
DEBUG=false

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/db_name
REDIS_URL=redis://localhost:6379/0

# API Keys (Optional - features work without)
OPENAI_API_KEY=sk-your-openai-key-here
NOWPAYMENTS_API_KEY=your-nowpayments-key-here

# Security
JWT_SECRET=change-this-to-random-string
API_KEY=your-api-key-here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application
APP_NAME=${product}
APP_URL=http://localhost:3000

# Optional: Upstream Main Backend (enables real NFT fraud analysis)
# Example (local main backend on host): MAIN_BACKEND_URL=http://host.docker.internal:8001
# For API key protected main backend, set either API key or JWT (or both)
MAIN_BACKEND_URL=
MAIN_BACKEND_API_KEY=
MAIN_BACKEND_JWT=
