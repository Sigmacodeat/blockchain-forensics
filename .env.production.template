# ===== PRODUCTION ENVIRONMENT =====
# Copy to .env.production and fill in real values
# NEVER commit .env.production to git!

# ===== Server Configuration =====
NODE_ENV=production
BACKEND_URL=https://api.blocksigmakode.ai
FRONTEND_URL=https://blocksigmakode.ai
API_BASE_URL=https://api.blocksigmakode.ai/api/v1

# ===== Databases =====
NEO4J_URI=bolt://neo4j-prod:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD_STRONG

POSTGRES_URL=postgresql://forensics_prod:CHANGE_ME_STRONG_PASSWORD@postgres-prod:5432/blockchain_forensics_prod
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis-prod:6379/0
QDRANT_URL=http://qdrant-prod:6333

# ===== Blockchain RPCs =====
# Ethereum Mainnet
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PRODUCTION_INFURA_KEY
ETHEREUM_WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_PRODUCTION_INFURA_KEY
ETHEREUM_ARCHIVE_NODE=https://eth-mainnet.alchemyapi.io/v2/YOUR_PRODUCTION_ALCHEMY_KEY

# L2s
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PRODUCTION_INFURA_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_PRODUCTION_ALCHEMY_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_PRODUCTION_ALCHEMY_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_PRODUCTION_ALCHEMY_KEY

# ===== AI Services =====
OPENAI_API_KEY=sk-prod-CHANGE_ME_OPENAI_KEY
ANTHROPIC_API_KEY=sk-ant-prod-CHANGE_ME_ANTHROPIC_KEY
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-large

# ===== Payment Systems =====
# Stripe (Production)
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME_PRODUCTION

# NOWPayments (Production)
NOWPAYMENTS_API_KEY=CHANGE_ME_NOWPAYMENTS_PRODUCTION_KEY
NOWPAYMENTS_IPN_SECRET=CHANGE_ME_IPN_SECRET
NOWPAYMENTS_SANDBOX=false

# ===== Email =====
EMAIL_ENABLED=true
EMAIL_BACKEND=sendgrid  # or smtp
EMAIL_FROM=noreply@blocksigmakode.ai
EMAIL_FROM_NAME=BlockSigmaKode

# SendGrid
SENDGRID_API_KEY=SG.CHANGE_ME_SENDGRID_PRODUCTION_KEY

# SMTP (Alternative)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
SMTP_TLS=true

# ===== Security =====
JWT_SECRET=CHANGE_ME_RANDOM_256_BIT_SECRET_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=2592000

# OAuth
GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_PRODUCTION_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_PRODUCTION_SECRET
OAUTH_CALLBACK_PATH=/api/v1/auth/google/callback

# ===== Monitoring & Logging =====
SENTRY_DSN=https://CHANGE_ME@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

LOG_LEVEL=info
LOG_FORMAT=json

# Prometheus
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# ===== Rate Limiting =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===== CORS =====
CORS_ORIGINS=https://blocksigmakode.ai,https://www.blocksigmakode.ai
CORS_ALLOW_CREDENTIALS=true

# ===== SSL/TLS =====
SSL_CERT_PATH=/etc/letsencrypt/live/blocksigmakode.ai/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/blocksigmakode.ai/privkey.pem

# ===== Backup =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=blocksigmakode-backups
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET

# ===== Feature Flags =====
FEATURE_APPSUMO_ENABLED=true
FEATURE_CRYPTO_PAYMENTS_ENABLED=true
FEATURE_AI_AGENT_ENABLED=true
FEATURE_BITCOIN_INVESTIGATION_ENABLED=true

# ===== CDN =====
CDN_ENABLED=true
CDN_URL=https://cdn.blocksigmakode.ai
CLOUDFLARE_ZONE_ID=CHANGE_ME_CLOUDFLARE_ZONE
CLOUDFLARE_API_TOKEN=CHANGE_ME_CLOUDFLARE_TOKEN

# ===== Session =====
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_256_BIT
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# ===== Performance =====
CACHE_TTL=300
QUERY_TIMEOUT=30000
MAX_CONNECTIONS=100
CONNECTION_POOL_SIZE=20

# ===== Maintenance =====
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We'll be back soon!"
