{
  "name": "sigmacode-blockchain-forensics",
  "version": "1.0.0",
  "description": "Leading enterprise platform for blockchain intelligence, compliance, and investigations worldwide",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "i18n:report": "node scripts/i18n-report.mjs en --fail-on-missing",
    "seo:generate-sitemaps": "node scripts/generate-sitemaps.mjs",
    "i18n:audit": "node frontend/scripts/audit-locales.mjs",
    "i18n:optimize": "bash optimize.sh",
    "build:optimized": "npm run i18n:optimize && npm run seo:generate-sitemaps && npm run build",
    "deploy": "npm run build:optimized && echo 'Ready for deployment'"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^5.1.0",
    "react-joyride": "^2.9.3"
  },
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@vitejs/plugin-react": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "keywords": [
    "blockchain",
    "forensics",
    "compliance",
    "intelligence",
    "crypto",
    "aml",
    "kyc",
    "international",
    "multilingual"
  ],
  "author": "SIGMACODE",
  "license": "Proprietary"
}
