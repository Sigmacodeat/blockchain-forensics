# ============================================
# CORE APPLICATION
# ============================================
NODE_ENV=production
APP_NAME="BlockSigmaKode Forensics"
APP_URL=https://blocksigmakode.ai
FRONTEND_URL=https://blocksigmakode.ai
BACKEND_URL=https://api.blocksigmakode.ai
API_VERSION=v1

# ============================================
# DATABASE - PostgreSQL + TimescaleDB
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/forensics_prod
POSTGRES_USER=forensics_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=forensics_prod
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================
# GRAPH DATABASE - Neo4j
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_NEO4J_PASSWORD
NEO4J_DATABASE=forensics

# ============================================
# CACHE - Redis
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_MAX_CONNECTIONS=50

# ============================================
# SECURITY & AUTH
# ============================================
SECRET_KEY=CHANGE_ME_SUPER_SECRET_KEY_MIN_32_CHARS
JWT_SECRET=CHANGE_ME_JWT_SECRET_KEY_MIN_32_CHARS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth - Google
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
OAUTH_CALLBACK_PATH=/api/v1/auth/oauth/google/callback

# ============================================
# STRIPE PAYMENTS
# ============================================
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PRICE_COMMUNITY=price_YOUR_PRICE_ID
STRIPE_PRICE_STARTER=price_YOUR_PRICE_ID
STRIPE_PRICE_PRO=price_YOUR_PRICE_ID
STRIPE_PRICE_BUSINESS=price_YOUR_PRICE_ID
STRIPE_PRICE_PLUS=price_YOUR_PRICE_ID
STRIPE_PRICE_ENTERPRISE=price_YOUR_PRICE_ID

# ============================================
# CRYPTO PAYMENTS - NOWPayments
# ============================================
NOWPAYMENTS_API_KEY=YOUR_NOWPAYMENTS_API_KEY
NOWPAYMENTS_IPN_SECRET=YOUR_NOWPAYMENTS_IPN_SECRET
NOWPAYMENTS_SANDBOX=false

# ============================================
# APPSUMO INTEGRATION
# ============================================
APPSUMO_API_KEY=YOUR_APPSUMO_API_KEY
APPSUMO_WEBHOOK_SECRET=YOUR_APPSUMO_WEBHOOK_SECRET
APPSUMO_PRODUCT_CHATBOT=chatbot-pro
APPSUMO_PRODUCT_FIREWALL=wallet-guardian
APPSUMO_PRODUCT_INSPECTOR=transaction-inspector
APPSUMO_PRODUCT_ANALYTICS=analytics-pro

# ============================================
# EMAIL NOTIFICATIONS
# ============================================
EMAIL_ENABLED=true
EMAIL_BACKEND=smtp
EMAIL_FROM=noreply@blocksigmakode.ai
EMAIL_FROM_NAME="BlockSigmaKode"

# SMTP Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
SMTP_TLS=true

# SendGrid (Alternative)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY

# ============================================
# BLOCKCHAIN RPC ENDPOINTS
# ============================================
# Ethereum
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ETHEREUM_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# BSC
BSC_RPC_URL=https://bsc-dataseed1.binance.org

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Avalanche
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Bitcoin
BITCOIN_RPC_URL=https://btc-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ============================================
# AI & ML
# ============================================
OPENAI_API_KEY=sk-YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# LangChain
LANGCHAIN_API_KEY=YOUR_LANGCHAIN_API_KEY
LANGCHAIN_PROJECT=forensics-prod

# ML Models Path
ML_MODELS_PATH=/app/ml_models

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# Sentry (Error Tracking)
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# ============================================
# CORS & SECURITY
# ============================================
CORS_ORIGINS=https://blocksigmakode.ai,https://www.blocksigmakode.ai
CORS_ALLOW_CREDENTIALS=true
ALLOWED_HOSTS=blocksigmakode.ai,www.blocksigmakode.ai,api.blocksigmakode.ai

# ============================================
# ANALYTICS
# ============================================
GOOGLE_ANALYTICS_ID=G-YOUR_GA_ID
MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN
AMPLITUDE_API_KEY=YOUR_AMPLITUDE_KEY

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_AI_AGENT=true
FEATURE_WALLET_SCANNER=true
FEATURE_BITCOIN_INVESTIGATION=true
FEATURE_FIREWALL=true
FEATURE_INTELLIGENCE_NETWORK=true
FEATURE_DEMO_SYSTEM=true
FEATURE_APPSUMO=true

# ============================================
# BACKGROUND JOBS
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TIMEZONE=UTC

# ============================================
# COMPLIANCE & LEGAL
# ============================================
PRIVACY_POLICY_URL=https://blocksigmakode.ai/legal/privacy
TERMS_OF_SERVICE_URL=https://blocksigmakode.ai/legal/terms
GDPR_COMPLIANT=true
DATA_RETENTION_DAYS=365

# ============================================
# PERFORMANCE
# ============================================
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5
GRACEFUL_TIMEOUT=30

# ============================================
# BACKUP & DISASTER RECOVERY
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=forensics-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY

# ============================================
# CDN & ASSETS
# ============================================
CDN_URL=https://cdn.blocksigmakode.ai
STATIC_URL=/static/
MEDIA_URL=/media/

# ============================================
# MISC
# ============================================
DEBUG=false
TESTING=false
PYTHONUNBUFFERED=1
TZ=UTC
